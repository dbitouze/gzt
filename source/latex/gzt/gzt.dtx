  \deftranslation[to=French]{#2}{#3}%
  \deftranslation[to=English]{#2}{#4}%
  \declaretheorem[%
  #1,%
  name=\translate{#2}
  ]{#2}
  \declaretheorem[%
  #1,%
  name=\translate{#2},
  numbered=no
  ]{#2*}
